@model IEnumerable<IngresoGastos.Models.IngresoGastostatis>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create","IngresoGastos")" class="btn btn-primary">New Create</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EsIngreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @if (item.EsIngreso == true) 
            {


            <p class="text-primary">Ingreso</p>
            }
               else
                {
                    <p class="text-danger">Gasto</p>
                
                }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new {@class="btn btn-success"}) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

<div class="form-group row">
    <div class="col-sm-1">
        <label class="col-form-label text-primary">Total Ingresos</label>
    </div>
    <div class="col-sm-2 text-righ text-primary">
        <label class="col-form-label">@ViewBag.Ingresos</label>
    </div>
</div>

<div class="form-group row">
   
    <div class="col-sm-1">
        <label class="col-form-label text-primary">Total Gastos</label>
    </div>
    <div class="col-sm-2 text-righ text-primary">
        <label class="col-form-label">@ViewBag.Gastos</label>
    </div>
</div>
<div class="form-group row">
    
    <div class="col-sm-1">
        <label class="col-form-label text-primary">Total Netos</label>
    </div>
    <div class="col-sm-2 text-righ text-primary">
        <label class="col-form-label">@ViewBag.Netos</label>
    </div>
</div>
